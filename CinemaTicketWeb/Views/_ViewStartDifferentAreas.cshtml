
@{  
    string CurrentReq = Convert.ToString(Context.Request.HttpContext.Request.RouteValues["Controller"]);
    dynamic Layout;  
    switch (CurrentReq)  
    {  
        case "Admin":  
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";  
            break;  
        default:  
            //Customer layout  
            Layout = "~/Views/Shared/_Layout.cshtml";  
            break;  
    }  
}  